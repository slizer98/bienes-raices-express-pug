extends ../layout/index

block contenido
    div
        h1.text-4xl.my-10.font-extrabold.text-center Bienes 
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina   

        div.mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5
                    div 
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Email de Registro
                        input#nombre.w-full.px-3.py-2.border.border-gray-300.rounded-md.placeholder-gray-400(placeholder="Ingresa tu email" type="email" name="email")
                    div.flex.items-center.justify-between
                        a.text-gray.text-xs(href="/auth/registro") ¿No tienes cuenta? 
                            span.text-indigo-600.font-bold Crear Cuenta 
                        a.text-gray.text-xs(href="/auth/login") ¿Ya tienes cuenta? 
                            span.text-indigo-600.font-bold Inicia Sesion 
                    input(type="submit" value="Enviar Instrucciones" class="w-full bg-indigo-600 py-2 px-3 text-white uppercase font-bold rounded-md hover:bg-indigo-800 cursor-pointer")