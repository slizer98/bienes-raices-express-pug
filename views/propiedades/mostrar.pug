extends ../layout/app 

block styles
    link(rel="stylesheet" href="https://unpkg.com/leaflet@1.8.0/dist/leaflet.css")

block contenido 
    div(class="py-5")
    h1(id="titulo" class="text-4xl my-10 font-extrabold text-center")= propiedad.titulo

    div     
        a(href="" class="font-bold text-gray-600 text-sm") Categotria:  
            span(class="font-normal")= propiedad.categoria.nombre
    
    div(class="mt-5 md:flex md:gap-4 md:items-start")
        div(class="md:w-2/3 bg-white shadow rounded-lg") 
            img(src=`/uploads/${propiedad.imagen}` alt=`Imagen de la propiedad ${propiedad.titulo}` class="w-full block h-96 object-cover")
            div(class="mx-5 py-10 space-y-5")
                p= propiedad.descripcion
                h2(class="text-2xl leading-6 font-bold text-gray-900") Informaci贸n de la propiedad
                div(class="grid grid-cols-1 md:grid-cols-2 gap-4")
                    p(class="text-gray-600 font-bold text-xs") WC 
                        span(class="text-gray-800 block text-lg")= propiedad.wc
                    p(class="text-gray-600 font-bold text-xs") Habitaciones 
                        span(class="text-gray-800 block text-lg")= propiedad.habitaciones
                    p(class="text-gray-600 font-bold text-xs") Estacionamiento
                        span(class="text-gray-800 block text-lg")= propiedad.estacionamientos
                    p(class="text-gray-600 font-bold text-xs") Precio
                        span(class="text-gray-800 block text-lg")= propiedad.precio.nombre

                   
        aside(class="md:w-1/3 bg-white shadow rounded-lg") 
            h3(class="text-center pb-5 leading-6 text-2xl font-bold text-gray-900") Ubicaci贸n     

            div(class="h-96" id="mapa")
                p(id="lat" class="hidden")= propiedad.lat
                p(id="lng" class="hidden")= propiedad.lng

            div(class="p-5")
                p(class="text-gray font-bold text-xs") Direcci贸n
                    span(id="calle" class="text-gray-800 block text-lg")= propiedad.calle

                if !esVendedor
                
                    h3(class="text-2xl mt-10 font-extrabold text-gray-600") Vendedor:
                    if enviado 
                        p(class="bg-green-100 p-2 text-center text-green-600 uppercase font-bold") Mensaje enviado correctamente
                    else if usuario

                        if errores
                            div(class="max-w-md mx-auto my-10")
                                each error in errores 
                                    p(class="bg-red-600 text-white uppercase text-xs text-center p-2 mb-1 font-bold")= error.msg
                        form(method="POST")
                            input(type="hidden" name="_csrf" value=csrfToken) 

                            div(class="space-y-5")
                                label(for="mensaje") Mensaje:
                                textarea(name="mensaje" id="mensaje" class="w-full border p-2 border-gray-300 rounded-lg shadow placeholder-gray-400 resize-none" placeholder="Mensaje al vendedor" rows="4")
                                input(type="submit" value="Enviar mensaje" class="bg-indigo-600 text-white w-full p-2 uppercase text-sm rounded-lg font-bold cursor-pointer ")
                        
                    else
                        div(class="flex justify-center gap-2 flex-col")
                            p Si deseas contactar al vendedor:
                            a(href="/auth/login" class="text-indigo-600 font-bold") Inicia sesi贸n

block scripts
    script(src="https://unpkg.com/leaflet@1.8.0/dist/leaflet.js")
    script(src="/js/mostrarMapa.js")