header.bg-indigo-600.p-2
    div.container.mx-auto.flex.justify-between.items-center
        a(href="/") 
            h1.text-2xl.text-white.font-extrabold.text-center Bienes
                span.font-normal Raices

        nav(class="my-5 text-sm md:flex md:items-center md:gap-3 font-bold text-white hidden")
            a(href="/auth/registro") Crear Cuenta
            a(href="/auth/login") Iniciar Sesión

div(class="bg-indigo-700 py-5 hidden lg:block w-full px-3")
    div(class="container mx-auto flex justify-between items-center ")
        nav(class="flex gap-4")
            a(href="/categorias/1" class="text-sm font-bold uppercase text-white") Casas 
            a(href="/categorias/2" class="text-sm font-bold uppercase text-white") Departamentos
            a(href="/categorias/3" class="text-sm font-bold uppercase text-white") Bodegas
            a(href="/categorias/4" class="text-sm font-bold uppercase text-white") Terrenos
            a(href="/categorias/5" class="text-sm font-bold uppercase text-white") Cabañas

        form(action="/buscador" method="POST" class="flex gap-3 items-center")
            input(type="hidden" name="_csrf" value=csrfToken)
            label(for="termino" class="text-white text-sm font-bold uppercase") Busqueda 
            input(type="text" id="termino" name="termino" placeholder="Buscar Propiedades" class="px-2 mx-2 rounded-lg shadow focus:border-none focus:outline-none")

            input(type="submit" value="Buscar" class="bg-indigo-600 hover:bg-indigo-400 text-white px-2 font-bold uppercase cursor-pointer text-sm rounded-lg shadow")